<urlset xmlns="http://www.sparegrandma.com/sitemap/">
    {% for post in site.posts %}
    <url>
        <loc>http://sparegrandma.com{{ post.url | remove: 'index.html' }}</loc>
    </url>
    {% endfor %}

    {% for page in site.pages %}
    {% if page.layout != nil %}
    {% if page.layout != 'feed' %}
    <url>
        <loc>http://foo.com{{ page.url | remove: 'index.html' }}</loc>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}
</urlset>